<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="BluOsNadRemote.App.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:BluOsNadRemote.App.Views"
	xmlns:local="clr-namespace:BluOsNadRemote.App">

	<TabBar>
		<ShellContent
			Title="Player"
            Route="PlayerPage"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:PlayerPage}" />
		<ShellContent
			Title="Presets"
			Icon="iconpresets.png"
			ContentTemplate="{DataTemplate views:PresetsPage}" />
		<ShellContent
			Title="Browse"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:BrowsePage}" />
		<ShellContent
			Title="Advanced"
			Icon="iconnad.png"
			ContentTemplate="{DataTemplate views:AdvancedPage}" />
		<ShellContent
			Title="Settings"
			Icon="iconsettings.png"
			ContentTemplate="{DataTemplate views:SettingsPage}" />
	</TabBar>
</Shell>
