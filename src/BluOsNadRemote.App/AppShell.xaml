<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="BluOsNadRemote.App.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:BluOsNadRemote.App.Views"
	xmlns:lang="clr-namespace:BluOsNadRemote.App.Resources.Languages">

	<TabBar>
		<ShellContent
			Title="{lang:Text Player}"
            Route="PlayerPage"
			Icon="iconplayer.png"
			ContentTemplate="{DataTemplate views:PlayerPage}" />
		<ShellContent
			Title="{lang:Text Presets}"
			Icon="iconpresets.png"
			ContentTemplate="{DataTemplate views:PresetsPage}" />
		<ShellContent
			Title="{lang:Text Browse}"
			Icon="iconbrowse.png"
			ContentTemplate="{DataTemplate views:BrowsePage}"
            Route="browse" />
		<ShellContent
			Title="{lang:Text Advanced}"
			Icon="iconnad.png"
			ContentTemplate="{DataTemplate views:AdvancedPage}" />
		<ShellContent
			Title="{lang:Text Settings}"
			Icon="iconsettings.png"
			ContentTemplate="{DataTemplate views:SettingsPage}" />
	</TabBar>
</Shell>
