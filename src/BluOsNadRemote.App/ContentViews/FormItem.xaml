<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluOsNadRemote.App.ContentViews.FormItem">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid ColumnDefinitions="auto,*" Margin="12,6,12,0">
                <Label Text="{TemplateBinding Label}" VerticalOptions="Center" WidthRequest="120" HorizontalOptions="Start"/>
                <ContentPresenter Grid.Column="1" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
