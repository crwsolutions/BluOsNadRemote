<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluOsNadRemote.App.ContentViews.RemoteStepper">
    <StackLayout Orientation="Horizontal"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"
                 Margin="10,0,10,0">

        <Button x:Name="btnMinus" Text="m" Clicked="btnMinus_Clicked" Style="{StaticResource CircleButton}"/>

        <Label x:Name="lblValue"
               TextColor="{Binding LabelColor}"
               WidthRequest="25"
               Text="{Binding Text}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <Button x:Name="btnPlus" Text="n" Clicked="btnPlus_Clicked" Style="{StaticResource CircleButton}"/>
    </StackLayout>
</ContentView>
