<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage xmlns:views="clr-namespace:BluOsNadRemote.App.Views"
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:BluOsNadRemote.App.ViewModels"
			 xmlns:controls="clr-namespace:BluOsNadRemote.App.Controls"
			 x:Class="BluOsNadRemote.App.Views.BrowsePage"
			 x:DataType="vm:BrowseViewModel"
			 Title="{Binding Title}"
			 NavigationPage.HasNavigationBar="False">

	<Shell.TitleView>
		<Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" RowDefinitions="60">
			<ImageButton
				Source="{AppThemeBinding Light=back_light.png, Dark=back_dark.png}"
				HeightRequest="28" WidthRequest="28"
				BackgroundColor="Transparent"
				IsVisible="{Binding HasParent}" 
				Command="{Binding GoBackCommand}" />
			<Image Margin="10" Grid.Column="1" Source="{Binding ServiceIconUri}" IsVisible="{Binding HasParent}" />
			<Label IsVisible="{Binding IsNotSearching}" TextColor="White" Grid.Column="2" Text="{Binding Title}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" />
			<ImageButton 
				Grid.Column="3" Margin="0,0,12,0"
				HeightRequest="26" WidthRequest="26"
				Source="{AppThemeBinding Light=home_light.png, Dark=home_dark.png}"
				BackgroundColor="Transparent"
				Command="{Binding GoHomeCommand}" 
				IsVisible="{Binding IsNotSearching}"/>
			<!-- glass -->
			<ImageButton 
				Grid.Column="4" Margin="0,8,8,0"
				HeightRequest="48" WidthRequest="48"
				VerticalOptions="Center"
				BackgroundColor="Transparent"
				Command="{Binding ShowSearchCommand}"
				IsVisible="{Binding IsNotSearching}">
				<ImageButton.Source>
					<FontImageSource FontFamily="CrwMedia" Glyph="q" />
				</ImageButton.Source>
			</ImageButton>
			<!-- cross -->
			<ImageButton 
				Grid.Column="4" Margin="0,2,8,0"
				HeightRequest="28" WidthRequest="28"
				BackgroundColor="Transparent"
				Command="{Binding HideSearchCommand}"
				IsVisible="{Binding IsSearching}">
				<ImageButton.Source>
					<FontImageSource FontFamily="CrwMedia" Glyph="l" />
				</ImageButton.Source>
			</ImageButton>

			<SearchBar Grid.Column="2" Grid.ColumnSpan="2" IsVisible="{Binding IsSearching}" x:Name="searchBar" 
						TextChanged="SearchBar_TextChanged"
						SearchCommand="{Binding SearchCommand}"
						SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
		</Grid>
	</Shell.TitleView>

	<ContentPage.Resources>
        <DataTemplate x:Key="SinglelineTemplate" x:DataType="vm:MusicContentEntryViewModel">
			<Grid Padding="12,8,8,2" ColumnDefinitions="*,Auto" RowDefinitions="Auto">
				<Grid VerticalOptions="Start" ColumnDefinitions="Auto,*, Auto" RowDefinitions="Auto">
					<Image IsVisible="{Binding HasImage, Mode=OneTime}" WidthRequest="75" HeightRequest="75" Source="{Binding Entry.ImageUri, Mode=OneTime}" VerticalOptions="Start" Margin="0,0,8,0" />
					<Label Grid.Column="1" Text="{Binding Entry.Name, Mode=OneTime}" Style="{DynamicResource ListItemTextStyle}" VerticalTextAlignment="Center" Padding="0,0,0,0" FontSize="Large" />
					<Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BrowseViewModel}}, Path=PresetTappedCommand, Mode=OneTime}"
								              CommandParameter="{Binding ., Mode=OneTime}"/>
                    </Grid.GestureRecognizers>
				</Grid>
                <Button HorizontalOptions="Start" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BrowseViewModel}}, Path=PlayCommand, Mode=OneTime}" CommandParameter="{Binding Entry, Mode=OneTime}" BackgroundColor="Transparent" HeightRequest="75" WidthRequest="75" BorderColor="Transparent" ImageSource="play.png" IsVisible="{Binding IsPlayableAndResolvable, Mode=OneTime}" VerticalOptions="Center" />
				<Button FontFamily="CrwMedia" Text="h" FontSize="48" Grid.Column="1" IsVisible="{Binding HasContextMenu, Mode=OneTime}" Clicked="More_Clicked" HeightRequest="75" WidthRequest="50" BackgroundColor="Transparent"/>
			</Grid>
		</DataTemplate>

        <DataTemplate x:Key="MultilineTemplate" x:DataType="vm:MusicContentEntryViewModel">
			<Grid Padding="12,8,8,2" ColumnDefinitions="*,Auto" RowDefinitions="Auto">
				<Grid VerticalOptions="Start" ColumnDefinitions="Auto,*, Auto" RowDefinitions="Auto">
					<Image IsVisible="{Binding HasImage, Mode=OneTime}" WidthRequest="75" HeightRequest="75" Source="{Binding Entry.ImageUri, Mode=OneTime}" VerticalOptions="Start" Margin="0,0,8,0" />
					<StackLayout Grid.Column="1">
						<Label Text="{Binding Entry.Name, Mode=OneTime}" Style="{DynamicResource ListItemTextStyle}"  />
						<Label Text="{Binding Entry.Text2, Mode=OneTime}" Style="{DynamicResource ListItemSubTextStyle}" />
					</StackLayout>
					<Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BrowseViewModel}}, Path=PresetTappedCommand, Mode=OneTime}"
								              CommandParameter="{Binding ., Mode=OneTime}"/>
                    </Grid.GestureRecognizers>
				</Grid>
                <Button HorizontalOptions="Start" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BrowseViewModel}}, Path=PlayCommand, Mode=OneTime}" CommandParameter="{Binding Entry, Mode=OneTime}" BackgroundColor="Transparent" HeightRequest="75" WidthRequest="75" BorderColor="Transparent" ImageSource="play.png" IsVisible="{Binding IsPlayableAndResolvable, Mode=OneTime}" VerticalOptions="Start" />
				<Button FontFamily="CrwMedia" Text="h" FontSize="48" Grid.Column="1" IsVisible="{Binding HasContextMenu, Mode=OneTime}" Clicked="More_Clicked" HeightRequest="75" WidthRequest="50" BackgroundColor="Transparent"/>
			</Grid>
		</DataTemplate>
		<controls:ItemsListViewMultilineTemplateSelector x:Key="MultilineSelector" Singleline="{StaticResource SinglelineTemplate}" Multiline="{StaticResource MultilineTemplate}" />
	</ContentPage.Resources>

	<RefreshView Command="{Binding LoadDataCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}" x:DataType="vm:BrowseViewModel">
		<ScrollView x:Name="svScrollView" Padding="0,0,0,12">
			<FlexLayout Wrap="NoWrap">
                <CollectionView IsVisible="{Binding HasCategories, Mode=OneWay}" ItemsSource="{Binding Categories, Mode=OneTime}" SelectionMode="None" IsGrouped="True" ItemTemplate="{StaticResource MultilineSelector}">
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate x:DataType="vm:MusicContentCategoryViewModel">
							<Label Text="{Binding Name, Mode=OneTime}" Style="{DynamicResource ListHeaderTextStyle}" />
						</DataTemplate>
					</CollectionView.GroupHeaderTemplate>
				</CollectionView>
                <CollectionView ItemsSource="{Binding Entries, Mode=OneTime}" IsVisible="{Binding HasEntries, Mode=OneWay}" SelectionMode="None" RemainingItemsThreshold="5" RemainingItemsThresholdReachedCommand="{Binding GetMoreItemsCommand}" ItemTemplate="{StaticResource MultilineSelector}"/>
            </FlexLayout>
		</ScrollView>
	</RefreshView>
</views:BaseContentPage>