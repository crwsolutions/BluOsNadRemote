<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage xmlns:views="clr-namespace:BluOsNadRemote.App.Views"
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:BluOsNadRemote.App.ViewModels"
			 xmlns:controls="clr-namespace:BluOsNadRemote.App.Controls"
			 xmlns:contentViews="clr-namespace:BluOsNadRemote.App.ContentViews"
			 x:Class="BluOsNadRemote.App.Views.BrowsePage"
			 x:DataType="vm:BrowseViewModel"
			 Title="{Binding Title}"
			 NavigationPage.HasNavigationBar="False">

    <Shell.TitleView>
		<Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" RowDefinitions="60">
			<ImageButton
				Source="{AppThemeBinding Light=back_light.png, Dark=back_dark.png}"
				HeightRequest="28" WidthRequest="28"
				BackgroundColor="Transparent"
				IsVisible="{Binding HasParent, Mode=OneWay}" 
				Command="{Binding GoBackCommand, Mode=OneTime}" />
            <Image Grid.Column="1" Margin="10" Source="{Binding ServiceIconUri, Mode=OneWay}" IsVisible="{Binding HasParent, Mode=OneWay}" />
            <Label Grid.Column="2" IsVisible="{Binding IsNotSearching, Mode=OneWay}" TextColor="White" Text="{Binding Title, Mode=OneWay}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" />
            <ImageButton Grid.Column="3" Margin="0,0,12,0"
				HeightRequest="26" WidthRequest="26"
				Source="{AppThemeBinding Light=home_light.png, Dark=home_dark.png}"
				BackgroundColor="Transparent"
				Command="{Binding GoHomeCommand, Mode=OneTime}" 
				IsVisible="{Binding CanGoHome, Mode=OneWay}"/>
			<!-- glass -->
            <Button Grid.Column="4" Margin="0,6,8,0"
                FontFamily="CrwMedia" Text="q"
                FontSize="42" TextColor="White"
				HeightRequest="48" WidthRequest="50"
				VerticalOptions="Center"
				BackgroundColor="Transparent"
				Command="{Binding ShowSearchCommand, Mode=OneTime}"
				IsVisible="{Binding CanSearch, Mode=OneWay}">
			</Button>
			<!-- cross -->
            <Button Grid.Column="4" Margin="0,2,8,0"
                FontFamily="CrwMedia" Text="l"
                FontSize="42" TextColor="White"
				HeightRequest="48" WidthRequest="50"
				BackgroundColor="Transparent"
				Command="{Binding HideSearchCommand, Mode=OneTime}"
				IsVisible="{Binding IsSearching, Mode=OneWay}">
			</Button>

			<SearchBar Grid.Column="2" IsVisible="{Binding IsSearching}" x:Name="searchBar" 
						SearchCommand="{Binding SearchCommand}"
						SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
		</Grid>
	</Shell.TitleView>

	<ContentPage.Resources>
        <DataTemplate x:Key="SinglelineTemplate" x:DataType="vm:MusicContentEntryViewModel">
            <contentViews:SinglelineMusicContentEntry />
		</DataTemplate>

        <DataTemplate x:Key="MultilineTemplate" x:DataType="vm:MusicContentEntryViewModel">
            <contentViews:MultilineMusicContentEntry />
        </DataTemplate>
		<controls:ItemsListViewMultilineTemplateSelector x:Key="MultilineSelector" Singleline="{StaticResource SinglelineTemplate}" Multiline="{StaticResource MultilineTemplate}" />
	</ContentPage.Resources>

	<RefreshView Command="{Binding LoadDataCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}" x:DataType="vm:BrowseViewModel">
        <Grid>
        <CollectionView ItemsSource="{Binding Categories, Mode=OneWay}" SelectionMode="None" IsGrouped="True" ItemTemplate="{StaticResource MultilineSelector}" RemainingItemsThreshold="5" RemainingItemsThresholdReachedCommand="{Binding GetMoreItemsCommand}">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="vm:MusicContentCategoryViewModel">
					<Label Text="{Binding Name, Mode=OneTime}" Style="{DynamicResource ListHeaderTextStyle}" Padding="12,6,0,6" BackgroundColor="Silver" />
				</DataTemplate>
			</CollectionView.GroupHeaderTemplate>
		</CollectionView>
        </Grid>
	</RefreshView>
</views:BaseContentPage>