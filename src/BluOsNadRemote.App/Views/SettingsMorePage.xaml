<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BluOsNadRemote.App.ViewModels"
             xmlns:lang="clr-namespace:BluOsNadRemote.App.Resources.Languages"
             x:Class="BluOsNadRemote.App.Views.SettingsMorePage"
             x:DataType="vm:SettingsMoreViewModel"
             Title="{lang:Text SettingsMoreTitle}">
    <Grid Style="{StaticResource Body}">
        <StackLayout>
            <Label Text="{lang:Text OverrideLanguage}" Style="{StaticResource FormHeader}" />
            <Label Text="{lang:Text OverrideLanguageIntro}" Style="{StaticResource FormIntro}" />
            
            <RadioButton Content="{lang:Text DefaultLanguageLabel}" Value="" IsChecked="{Binding DefaultIsChecked}" CheckedChanged="RadioButton_CheckedChanged" />
            <Label Text="{lang:Text OverrideLanguageOr}" Style="{StaticResource FormText}" />
            <RadioButton Content="{lang:Text en-US}" Value="{Binding EN_US, Mode=OneTime}" IsChecked="{Binding EnIsChecked}" CheckedChanged="RadioButton_CheckedChanged" />
            <RadioButton Content="{lang:Text nl-NL}" Value="{Binding NL_NL, Mode=OneTime}" IsChecked="{Binding NlIsChecked}" CheckedChanged="RadioButton_CheckedChanged" />
        </StackLayout>
    </Grid>
</ContentPage>